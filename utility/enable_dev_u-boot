# Support enabling a way to boot into U-Boot.

alert() {
  echo "$*" >&2
}

die() {
  alert "ERROR: $*"
  exit 1
}

crossystem dev_boot_u_boot=1 2>/dev/null || die "Failed to enable U-Boot."
    echo "
    SUCCESS: Booting into U-Boot is enabled.

    Press Ctrl-B at the developer screen to boot into U-Boot.
    "
    ;;
esac
